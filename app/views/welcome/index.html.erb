<h1>Effective Altruism</h1>
<% unless user_signed_in? && current_user.profile %>
	<%= link_to 'Get Started!', new_user_registration_path %>
<% end %>

<% if user_signed_in? %>
	<% if current_user.profile %>
		<% if current_page? profile_path(current_user.profile) %>
			<%= link_to "Edit My Profile", edit_profile_path(current_user.profile) %>
		<% else %>
			<%= link_to "View My Profile", profile_path(current_user.profile) %>
		<% end %>
	<% else %>
		<%= link_to "Create Profile", new_profile_path %>
	<% end %>
<% end %>

<% if user_signed_in? %>
	<li><%= link_to "Edit user", edit_user_registration_path %></li>
	<li><%= link_to "Logout", destroy_user_session_path %></li>
<% else %>
	<li><%= link_to "Sign Up", new_user_registration_path %></li>
	<li><%= link_to "Login", new_user_session_path %></li>
<% end %>